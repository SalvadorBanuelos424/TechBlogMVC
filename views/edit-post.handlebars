<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2 class="m-5 py-2 px-4 text-sm bg-black text-green-300">
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" class='text-black' value="{{post.title}}" />
    </div>
    <div>    
      <div class="m-5 py-2 px-4 text-sml bg-black text-green-300">Content</div>

      <input name="post-comment" type="text" class='text-black' value="{{post.description}}" />
            
    </div>

    <button type="submit" class= "update-post-btn m-5 py-2 px-4 border-4 text-2xl border-green-300 bg-black text-green-300">Update post</button>
    <button type="button" class="delete-post-btn m-5 py-2 px-4 border-4 text-2xl border-green-300 bg-black text-green-300">Delete post</button>
  </form>
</article>

</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>