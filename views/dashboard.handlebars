<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" class='text-black' id="post-title" name="post-title" />
    </div>
    <div>
      <label for="description">Here</label>
      <input type="text" class='text-black' id="post-content" name="description" />
    </div>
    <button type="submit" class=" border-2 border-green-300">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link m-5 py-2 px-4 border-4 text-2xl border-green-300 bg-black text-green-300">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>